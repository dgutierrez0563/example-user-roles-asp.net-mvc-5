@model IEnumerable<Microsoft.AspNet.Identity.EntityFramework.IdentityRole>

@{
    ViewBag.Title = "Index";
}

<h2>Index Avalible Roles for User</h2>

<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Create New","Create","Roles")
    </table>
</section>

<section class="col-sm-6">
    <table class="table-bordered">
        @Html.ActionLink("Assing Role to User", "RegisterRole", "Account")
    </table>
</section>

<table class="table table-bordered table-hover">
    <tr>
        <th>Role Name</th>
    </tr>
    @foreach (var item in Model) {
        <tr>
            <td>@item.Name</td>
        </tr>
    }
</table> 


@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}

